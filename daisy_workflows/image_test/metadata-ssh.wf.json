{
  "Name": "img-metadata-ssh-test",
  "Vars": {
    "source_image": {"Required": true, "Description": "Image to be tested"}
  },
  "Sources": {
    "metadata-ssh-tester.sh": "./scripts/metadata-ssh-tester.sh",
    "metadata-ssh-testee.sh": "./scripts/metadata-ssh-testee.sh"
  },
  "Steps": {
    "create-disk-tester": {
      "CreateDisks": [
        {
          "Name": "disk-tester",
          "SourceImage": "projects/debian-cloud/global/images/family/debian-9",
          "SizeGb": "10",
          "Type": "pd-ssd"
        }
      ]
    },
    "create-disk-testee": {
      "CreateDisks": [
        {
          "Name": "disk-testee",
          "SourceImage": "${source_image}",
          "SizeGb": "10",
          "Type": "pd-ssd"
        }
      ]
    },
    "create-instance-tester": {
      "CreateInstances": [
        {
          "Name": "inst-metadata-ssh-tester",
          "Disks": [{"Source": "disk-tester"}],
          "StartupScript": "metadata-ssh-tester.sh",
          "metadata": {
            "testee": "inst-metadata-ssh-testee-${NAME}-${ID}"
          },
          "Scopes": [
            "https://www.googleapis.com/auth/devstorage.read_only",
            "https://www.googleapis.com/auth/compute"
          ]
        }
      ]
    },
    "create-instance-testee": {
      "CreateInstances": [
        {
          "Name": "inst-metadata-ssh-testee",
          "Disks": [{"Source": "disk-testee"}],
          "StartupScript": "metadata-ssh-testee.sh"
        }
      ]
    },
    "wait-for-boot-testee": {
      "Timeout": "5m",
      "WaitForInstancesSignal": [
        {
          "Name": "inst-metadata-ssh-testee",
          "SerialOutput": {
            "Port": 1,
            "SuccessMatch": "BOOTED"
          }
        }
      ]
    },
    "wait-for-tester": {
      "Timeout": "5m",
      "WaitForInstancesSignal": [
        {
          "Name": "inst-metadata-ssh-tester",
          "SerialOutput": {
            "Port": 1,
            "SuccessMatch": "MetadataSshTestSuccess",
            "FailureMatch": "MetadataSshTestFailed"
          }
        }
      ]
    }
  },
  "Dependencies": {
    "create-instance-testee": ["create-disk-testee"],
    "wait-for-boot-testee": ["create-instance-testee"],
    "create-instance-tester": ["create-disk-tester", "wait-for-boot-testee"],
    "wait-for-tester": ["create-instance-tester"]
  }
}
